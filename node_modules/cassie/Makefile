test-cov:
	rm -r src-cov
	jscoverage src src-cov
	@MOCHA_TEST_COV=1 mocha --reporter html-cov > test/coverage/index.html


build: src/cassie.js
	browserify src/cassie.js -o build/cassie.js \
	                            --prelude false \
	                            --ignore  boo

minify: build
	uglifyjs -nc -o build/cassie.min.js < build/cassie.js


all: build minify

.PHONY: build minify
